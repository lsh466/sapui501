<mvc:View
    controllerName="myui5app.controller.InvoiceList"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <List
        id="invoiceList"
        headerText="{i18n>invoiceListTitle}"
        items="{
            path: 'invoices>/Invoices',
            sorter: {
                path: 'ShipperName',
                group: true
            }
        }"
        class="sapUiResponsiveMargin"
        width="auto"
    >
        <headerToolbar>
            <Toolbar>
                <Title text="{i18n>invoiceListTitle}" />
                <ToolbarSpacer />
                <SearchField
                    width="50%"
                    search=".onFilterInvoices"
                />
            </Toolbar>
        </headerToolbar>
        <items>
            <ObjectListItem
                title="{invoices>ProductName} X {invoices>Quantity}"
                number="{
                    parts: ['invoices>ExtendedPrice', 'view>/currency'],
                    type: 'sap.ui.model.type.Currency',
                    formatOptions: {
                        showMeasure: false
                    }
                }"
                numberUnit="{view>/currency}"
                numberState="{= ${invoices>ExtendedPrice} > 50 ? 'Error' : 'Success' }"
            >
                <firstStatus>
                    <ObjectStatus text="{
                        path: 'invoices>Status',
                        formatter: '.formatters.statusText'
                    }" />
                </firstStatus>
            </ObjectListItem>
        </items>
    </List>
</mvc:View>