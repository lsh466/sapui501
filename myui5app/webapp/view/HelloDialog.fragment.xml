<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
>
	<Dialog
		id="idDialog"
		title="Hello {/recipient/name}"
	>
		<content>
			<c:Icon
				src="sap-icon://hello-world"
				size="8rem"
				class="sapUiMediumMargin"
			/>
		</content>
		<beginButton>
			<Button
				icon="sap-icon://accept"
				text="{i18n>dialogCloseButtonText}"
				press=".onButtonPress"
			/>
		</beginButton>
	</Dialog>
</c:FragmentDefinition>